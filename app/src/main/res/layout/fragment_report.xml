<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.ReportFragment">

    <!-- 报表标题 -->
    <TextView
        android:id="@+id/tv_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="财务报表"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 时间选择器 -->
    <LinearLayout
        android:id="@+id/ll_time_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_report_title">

        <Button
            android:id="@+id/btn_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本周"
            android:background="@drawable/btn_type_selector"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本月"
            android:background="@drawable/btn_type_selector"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本年"
            android:background="@drawable/btn_type_selector"
            android:textColor="@drawable/btn_text_color_selector"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="4dp" />
        
    </LinearLayout>

    <!-- 收支饼图 -->
    <FrameLayout
        android:id="@+id/frame_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/frame_line_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_time_select"
        app:layout_constraintVertical_weight="1" />

    <!-- 收支折线图 -->
    <FrameLayout
        android:id="@+id/frame_line_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_pie_chart"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>